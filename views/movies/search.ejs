<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-4xl font-bold mb-8 text-center">Movie List</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% data.forEach(movie => { %>
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <img class="w-full h-64 object-cover" src="<%= movie.Poster %>" alt="<%= movie.Title %>">
                    <div class="p-4">
                        <h2 class="text-2xl font-bold mb-2"><%= movie.Title %></h2>
                        <p class="text-gray-700 mb-1">Year: <%= movie.Year %></p>
                        <p class="text-gray-700">IMDB ID: <%= movie.imdbID %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
